<div class="flex flex-col border-2 rounded-lg border-violet-500 mb-4 py-3 bg-[#f7f7f7] leading-8 transition-colors duration-1000 dark:bg-[#121212] text-black dark:text-gray-200">
    <div class="flex flex-row items-center gap-2 ml-4 username_date ">
        <div class="w-14 h-14">
            <img class="image_profile" src=<%= profileImage %> alt="">
        </div>
        <div class="leading-6">
            <a 
                href="/profile/userProfile/<%= userId %>" 
                class="hover:text-violet-500"
            >
                <%= name %>
            </a>
            <p class="text-[12px]"><%= date %></p>
        </div>
    </div>

    <div class="flex flex-col px-4 gap-2 mb-4 postitem_container ">
        <div>
            <h1 class="text-md sm:text-xl"><%= title %></h1>
        </div>
        <div class="w-full ">
            <img class="w-full max-h-[450px] rounded-sm" src=<%= mainImage %> alt="">
        </div>
        <div>
            <p><%= description %></p>
        </div>
    </div>

    <div class="flex flex-row justify-center gap-8 mb-2">
        <%- include("./postLikeButton", {
            postId: postId,
            currentPage: currentPage,
            })
        %>
        <button>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hover:scale-125 hover:text-purple-800 dark:hover:text-purple-600">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
            </svg>  
        </button>
        <button>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hover:scale-125 hover:text-purple-800 dark:hover:text-purple-600">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z" />
            </svg>  
        </button>
    </div>
</div>  