<!-- Modal toggle -->
<% if (showPostButton) { %>
<button
  data-modal-target="authentication-modal"
  data-modal-toggle="authentication-modal"
  class="block sm:block hidden transition ease-in-out hover:scale-105 text-white bg-purple-700 hover:text-gray-200 hover:bg-purple-600 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-6 py-1 text-center"
  type="button"
>
  POST
</button>
<% } else { %>
<h2 style="color: red"><%= postButtonTimeRemaining %> hrs to go!</h2>
<% } %> <% if (showPostButton) { %>
<svg
  class="w-5 h-5 sm:hidden text-gray-800 dark:text-gray-200 transition ease-in-out hover:scale-105 transition ease-in-out hover:scale-125"
  data-modal-target="authentication-modal"
  data-modal-toggle="authentication-modal"
  xmlns="http://www.w3.org/2000/svg"
  fill="none"
  viewBox="0 0 24 24"
  stroke-width="1.5"
  stroke="currentColor"
>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    d="M9 8.25H7.5a2.25 2.25 0 00-2.25 2.25v9a2.25 2.25 0 002.25 2.25h9a2.25 2.25 0 002.25-2.25v-9a2.25 2.25 0 00-2.25-2.25H15m0-3l-3-3m0 0l-3 3m3-3V15"
  />
</svg>
<% } else { %>
<span></span>
<% } %>

<!-- Main modal -->
<div
  id="authentication-modal"
  tabindex="-1"
  aria-hidden="true"
  class="addPostClose fixed z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto inset-0 h-full"
>
  <div class="relative w-full max-w-md h-auto">
    <!-- Modal content -->
    <div class="relative bg-[#ebebeb] rounded-lg shadow dark:bg-[#111111]">
      <button
        type="button"
        class="addPostClose absolute top-3 right-1.5 text-gray-400 bg-transparent hover:bg-gray-400 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white dark:text-gray-400"
        data-modal-hide="authentication-modal"
      >
        <svg
          aria-hidden="true"
          class="addPostClose w-5 h-5 text-gray-800 dark:text-white transition ease-in-out hover:scale-125"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          >
          <path
            class="addPostClose"
            fill-rule="evenodd"
            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
            clip-rule="evenodd"
          ></path>
        </svg>
        <span class="sr-only">Close modal</span>
      </button>
      <div class="px-6 py-6 lg:px-8 dark:text-gray-400">
        <form
          class="grid gap-y-6 overflow-auto max-h-[400px] postForm"
        >
          <div class="text-gray-800 dark:text-gray-200">
            <h3
              style="color: red; text-align: center; margin-top: 0"
              id="titleError"
              class="err-message"
            >
              Invalid Title
            </h3>
            <label>Post Title</label>
            <input
              type="text"
              id="addPostTitle"
              name="postTitle"
              class="inputhai dark:border-purple-300 form-control block w-full px-4 py-2 mt-2 text-base font-normal text-gray-800 bg-white dark:bg-[#1b1b1bff] transition-colors duration-1000 dark:text-white bg-clip-padding border border-solid dark:focus:border-purple-600 rounded-xl transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-purple-600 focus:outline-none border-purple-800"
            />
          </div>
          <div class="flex flex-col gap-1 text-black dark:text-white">
            <h3
              style="color: red; text-align: center; margin-top: 0"
              id="descriptionError"
              class="err-message"
            >
              Invalid Description
            </h3>
            <label>Description</label>
            <textarea
              type="text"
              id="addPostDescription"
              name="postDescription"
              class="two max-h-[180px] min-h-[100px] dark:border-purple-300 inputhai form-control block w-full px-4 py-2 text-base font-normal text-gray-800 bg-white dark:bg-[#1b1b1bff] transition-colors duration-1000 dark:text-white bg-clip-padding border border-solid dark:focus:border-purple-600 rounded-xl transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-purple-600 border-purple-800 focus:outline-none"
            ></textarea>
            <div class="flex flex-row justify-end gap-2">
              <div>
                <input
                  type="file"
                  style="display: none"
                  id="postImagePicker"
                  accept="image/png, image/jpeg"
                />
                <input type="hidden" name="uploadedImages" id="postImageContainer" />
                <label for="postImagePicker">
                  <svg
                    class="w-6 h-6"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-6 h-6"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"
                    />
                  </svg>
                </label>
              </div>
              <svg
                class="w-6 h-6"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12.75 8.25v7.5m6-7.5h-3V12m0 0v3.75m0-3.75H18M9.75 9.348c-1.03-1.464-2.698-1.464-3.728 0-1.03 1.465-1.03 3.84 0 5.304 1.03 1.464 2.699 1.464 3.728 0V12h-1.5M4.5 19.5h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z"
                />
              </svg>
              <button class="second-btn" type="button">
                <svg
                  class="w-6 h-6"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15.182 15.182a4.5 4.5 0 01-6.364 0M21 12a9 9 0 11-18 0 9 9 0 0118 0zM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75zm-.375 0h.008v.015h-.008V9.75zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75zm-.375 0h.008v.015h-.008V9.75z"
                  />
                </svg>
              </button>
            </div>
            <div class="mt-4">
              <div class="flex flex-col gap-y-2 justify-center items-center w-full" id="postImagePreview">
                <!-- <img
                  class="h-[200px] max-w-full"
                  src="https://images.unsplash.com/photo-1490604001847-b712b0c2f967?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjF8fGxhbmRzY2FwZXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60"
                  alt=""
                /> -->
              </div>
            </div>
          </div>

          <button
            id="addPostButton"
            type="submit"
            class="px-6 py-1 rounded-lg bg-purple-600 text-white border-purple-900 hover:bg-purple-800 hover:text-gray-200"
          >
            Post
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
