<div class="grow bg-[#f7f7f7] text-gray-800 dark:text-gray-100 dark:bg-[#1f1f1f] container_user_setting">
    <form class="userSettingBox bg-[#dfdfde] dark:bg-[#121212] border-[1px] border-purple-600 flex flex-col gap-y-4">
        <div class="flex flex-col gap-y-4 bg-[#c8c8c7] dark:bg-[#4d4d4d]/20 p-6">
            <h3 class="font-bold">Update Password</h3>
            <div class="flex flex-col gap-y-2">
                <input type="text" class="userSettingchangepass border-b-[1px] border-r-[1px] border-purple-600" name="currPassword" placeholder="Enter Current Password"></input>
                <input type="text" class="userSettingchangepass border-b-[1px] border-r-[1px] border-purple-600" name="newPassword" placeholder="Enter New Password"></input>
                <input type="text" class="userSettingchangepass border-b-[1px] border-r-[1px] border-purple-600" name="verifyNewPassword" placeholder="Confirm New Password"></input>
                <button class="text-[14px] font-medium text-white bg-purple-600 p-2 min-w-[150px]" id="userSettingUpbtn">UPDATE</button>
            </div>
        </div>
        
        <div class="flex flex-col gap-y-4 bg-[#c8c8c7] dark:bg-[#4d4d4d]/20 p-6">
            <h3 class="font-bold">User Account Deletion</h3>
            <div class="flex flex-col gap-y-2">
                <button class="text-[14px] font-medium text-white bg-purple-600 p-2 min-w-[150px]" id="userSettingDelbtn">DELETE ACOUNT</button>
            </div>
        </div>
    </form>
</div>
