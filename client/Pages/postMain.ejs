<div class="flex flex-row grow bg-black">
    <div class="flex flex-col basis-2/3 px-2 gap-y-4 postMainContainer overflow-y-auto overflow-x-hidden scroll-smooth p-4">
        <div class="flex flex-row items-center gap-2 ml-4 username_date ">
            <div class="w-14 h-14">
                <img class="image_profile" src=<%= openedPost.profileImage ? openedPost.profileImage: "https://images.unsplash.com/photo-1511367461989-f85a21fda167?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8cHJvZmlsZXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60" %> alt="">
            </div>
            <div class="leading-6">
                <a 
                    href="/profile/userProfile/<%= openedPost.userId %>" 
                    class="hover:text-violet-500"
                >
                    <%= openedPost.username %>
                </a>
                <p class="text-[12px]"><%= openedPost.addedOn %></p>
            </div>
        </div>
        <!-- header  -->
        <div class="flex flex-col grow gap-y-4 ">
            <h2 class="text-[20px] text-center text-white"><%= openedPost.title %></h2>
    
            <!-- img carousal -->
            <% if (openedPost.uploadedImages) { %>
            <div class="flex grow justify-center items-center">
                <img class="max-w-full h-[400px]" src="<%= openedPost.uploadedImages %>" />
            </div>
            <% } %>
    
            <!-- description  -->
            <h3 class="text-[16px] text-center text-white"><%= openedPost.description %></h3>
        </div>
        <div class="flex flex-row justify-center gap-8 mb-2">
            <%- include("../Partials/postLikeButton", {
                postId: openedPost.stringId,
                currentPage: "mainPost",
                likes: openedPost.likes,
                isAlreadyLikedByThisUser: openedPost.isAlreadyLikedByThisUser,
                })
            %>
            <button>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hover:scale-125 hover:text-purple-800 dark:hover:text-purple-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z" />
                </svg>  
            </button>
        </div>
    </div>


    <div class="flex grow basis-1/3 postMainContainer overflow-y-auto overflow-x-hidden scroll-smooth border-l-[1px] border-purple-600">
