<div class="main bg-[#dfdfdf] dark:bg-[#1f1f1f] transition-colors duration-1000 text-black dark:text-gray-200">
    <div class="cont-edit-profile ">
        <div class="main-edit-profile bg-[#fff] dark:bg-[#000000] transition-colors duration-1000 text-black dark:text-gray-200 p-8 md:max-w-[75%] dark:shadow-sm dark:shadow-violet-700 flex flex-col justify-center gap-8">
            <div class="profimg inpp">
                <img src="https://staticg.sportskeeda.com/editor/2022/07/aedcf-16570135965843.png"></image>
                <button class="block sm:block hidden transition ease-in-out hover:scale-105 text-white bg-purple-700 hover:text-gray-200 hover:bg-purple-600 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-6 py-1 text-center">Edit Pic</button>
            </div>
            <div class="user name inpp text-black dark:text-gray-200 ">
                <p>User Name</p>
                <input type="text" class="inp text-left border-b-[1px] border-purple-600 hover:border-purple-900" name="name" placeholder="sosenkk">
            </div>
            <div class="Bio inpp">
                <p>Bio</p>
                <textarea class="min-h-[30px] max-h-[140px] h-[60px] border-b-[1px] border-purple-600 hover:border-purple-900 hover:border-b-[2px] text-left max-w-[100%] w-[100%] active:border-purple-900 bg-transparent outline-none" name="bio" id="" class="inp" cols="30" rows="10" placeholder="Cringe"></textarea>
            </div>
            <div class="Dob inpp text-black dark:text-gray-200 ">
                <p>Date Of Birth</p>
                <input type="date" name="dob" class="inp border-b-[1px] border-purple-600 hover:border-purple-900" placeholder="Date of birth">
            </div>
            <div class="gender inpp">
                <p>Gender?</p>
                <div class="flex flex-row w-[100%] justify-between">
                    <div class="flex flex-row gap-2">
                        <input type="radio" id="male" name="gender" value="male">
                        <label for="male">
                            Male
                        </label>
                    </div>
                    <div class="flex flex-row gap-2">
                        <input type="radio" id="female" name="gender" value="female">
                        <label for="female">
                            Female
                        </label>
                    </div>
                    <div class="flex flex-row gap-2">
                        <input type="radio" id="other" name="gender" value="other">
                        <label for="other">
                            Other
                        </label>
                    </div>
                </div>
                
            </div>
            <div class="action inpp flex flex-row justify-center gap-2">
                <button class="block sm:block hidden transition ease-in-out hover:scale-105 text-white bg-purple-700 hover:text-gray-200 hover:bg-purple-600 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-6 py-1 text-center">Cancel</button>
                <button class="block sm:block hidden transition ease-in-out hover:scale-105 text-white bg-purple-700 hover:text-gray-200 hover:bg-purple-600 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-6 py-1 text-center">Submit</button>
            </div>
        </div>
    </div>
</div>
