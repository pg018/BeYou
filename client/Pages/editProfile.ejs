<div class="main bg-[#dfdfdf] dark:bg-[#1f1f1f] transition-colors duration-1000 text-black dark:text-gray-200">
    <div class="cont-edit-profile">
        <form method="post" action="/profile/editProfile" class="main-edit-profile bg-[#fff] dark:bg-[#000000] transition-colors duration-1000 text-black dark:text-gray-200 p-8 md:max-w-[75%] dark:shadow-sm dark:shadow-violet-700 flex flex-col justify-center gap-8">
            <div class="profimg inpp">
                <label for="avatar">
                    <img id="profileImg" src="<%= userData.profileImage ? userData.profileImage : "https://staticg.sportskeeda.com/editor/2022/07/aedcf-16570135965843.png" %>"></image>
                </label>

                <input type="file"
                id="avatar"
                accept="image/png, image/jpeg" style="display: none;">                
                
                <input type="hidden" name="profileImage" id="realImage" /> 
                <!-- <button class="block sm:block hidden transition ease-in-out hover:scale-105 text-white bg-purple-700 hover:text-gray-200 hover:bg-purple-600 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-6 py-1 text-center">Edit Pic</button> -->
            </div>
            <div style="color:red;"><%= editProfileError %></div>
            <div class="user name inpp text-black dark:text-gray-200 ">
                <p>User Name</p>
                <input type="text" class="inp text-left border-b-[1px] border-purple-600 hover:border-purple-900" name="username" value=<%= userData.username %>>
            </div>
            <div class="Bio inpp">
                <p>Bio</p>
                <textarea class="min-h-[30px] max-h-[140px] h-[60px] border-b-[1px] border-purple-600 hover:border-purple-900 hover:border-b-[2px] text-left max-w-[100%] w-[100%] active:border-purple-900 bg-transparent outline-none" name="description" class="inp" cols="30" rows="10" placeholder="<%= !userData.description ? "Please add to your bio" : null %>"><%= !userData.description ? null : userData.description  %></textarea>
            </div>
            <div class="Dob inpp text-black dark:text-gray-200 ">
                <p>Date Of Birth</p>
                <input type="text" onfocus="this.type='date'"  name="dateOfBirth" class="inp border-b-[1px] border-purple-600 hover:border-purple-900" placeholder="<%= !userData.dateOfBirth ? "Please add your DOB" : userData.dateOfBirth  %>">
            </div>
            <div class="gender inpp">
                <p>Gender?</p>
                <div class="flex flex-row w-[100%] justify-between">
                    <div class="flex flex-row gap-2">
                        <input type="radio" id="male" name="gender" value="male" <%= userData.gender === "male" ? "checked": null %> >
                        <label for="male">
                            Male
                        </label>
                    </div>
                    <div class="flex flex-row gap-2">
                        <input type="radio" id="female" name="gender" value="female" <%= userData.gender === "female" ? "checked": null %> >
                        <label for="female">
                            Female
                        </label>
                    </div>
                    <div class="flex flex-row gap-2">
                        <input type="radio" id="other" name="gender" value="other" <%= userData.gender === "other" ? "checked": null %> >
                        <label for="other">
                            Other
                        </label>
                    </div>
                </div>
                
            </div>
            <div class="action inpp flex flex-row justify-center gap-2">
                <button type="submit" class="block transition ease-in-out hover:scale-105 text-white bg-purple-700 hover:text-gray-200 hover:bg-purple-600 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-6 py-1 text-center">Submit</button>
            </div>
        </form>
    </div>
</div>
