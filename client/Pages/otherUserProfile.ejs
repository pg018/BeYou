<div
  class="main text-gray-800 dark:text-gray-100 bg-[#fff] dark:bg-[#000] transition-colors duration-1000"
>
  <div class="banner">
    <img
      src="https://img.freepik.com/free-vector/nature-scene-with-river-hills-forest-mountain-landscape-flat-cartoon-style-illustration_1150-37326.jpg"
      alt=""
    />
  </div>
  <div class="top">
    <div class="Followers right">
      <h2 class="small-font font-bold"><%=  otherUserData.noFriends %></h2>
      <p class="small-font">Friends</p>
    </div>
    <div class="profile flexcenter1">
      <img
        class="border-4 border-white dark:border-black transition-colors duration-1000"
        src="https://staticg.sportskeeda.com/editor/2022/07/aedcf-16570135965843.png"
        alt="pfp"
      />
    </div>
    <div class="Following left">
      <h2 class="small-font font-bold"><%= otherUserData.noFollowing %></h2>
      <p class="small-font">Following</p>
    </div>
  </div>

  <div class="mid">
    <div class="name font-bold">
      <h3><%= otherUserData.username %></h3>
    </div>
    <div class="bio">
      <p class="small-font">
        <%= otherUserData.description %>
      </p>
    </div>
  </div>
  <hr class="style2" />
  <div class="mt-2 flex flex-col justify-center block transition ease-in-out hover:scale-105 text-white bg-purple-700 hover:text-gray-200 hover:bg-purple-600 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-6 py-1 text-center">
    <a class="w-full text-center" href="/post/addFriend/<%= otherUserData.userId %>">
        <% if (otherUserData.alreadyFollowing) { %>
            Following
        <% } else { %>
            Follow
        <% } %> 
    </a>
  </div>
    <div class="myposts">
      <% otherUserPostsData.forEach(post => { %>
        <% const formattedDate = new Date(post.addedOn).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
        <%- include("./../Partials/postListItem.ejs", {
            title: post.title,
            name: userData.username,
            userId: post.userId,
            postId: post.stringId,
            currentPage: 'otherUser',
            description: post.description,
            date: formattedDate,
            profileImage: "https://staticg.sportskeeda.com/editor/2022/07/aedcf-16570135965843.png",
            mainImage: "https://images.unsplash.com/photo-1514525253161-7a46d19cd819?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8cGFydHl8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"
          })
        %>
      <% }) %>
    </div>
</div>
