<div
  class="main text-gray-800 dark:text-gray-100 bg-[#fff] dark:bg-[#000] transition-colors duration-1000"
>
  <div class="banner">
    <img
      src="https://img.freepik.com/free-vector/nature-scene-with-river-hills-forest-mountain-landscape-flat-cartoon-style-illustration_1150-37326.jpg"
      alt=""
    />
  </div>
  <div class="top">
    <div class="Followers right">
      <a href="/profile/followers/<%= otherUserData.stringId %>">
        <h2 class="small-font font-bold"><%=  otherUserData.noFriends %></h2>
        <p class="small-font">Followers</p>
      </a>
    </div>
    <div class="profile flexcenter1">
      <img
        class="border-4 border-white dark:border-black transition-colors duration-1000"
        src="<%= otherUserData.profileImage ? otherUserData.profileImage : 'https://virtualpiano.net/wp-content/uploads/2020/08/Dua-Lipa-Artist-Online-Piano-Keyboard-Virtual-Piano.jpg' %>"
        alt="pfp"
      />
    </div>
    <div class="Following left">
      <a href="/profile/following/<%= otherUserData.stringId %>">
        <h2 class="small-font font-bold"><%= otherUserData.noFollowing %></h2>
        <p class="small-font">Following</p>
      </a>
    </div>
  </div>

  <div class="mid">
    <div class="name font-bold">
      <h3><%= otherUserData.username %></h3>
    </div>
    <div class="bio">
      <p class="small-font">
        <%= otherUserData.description %>
      </p>
    </div>
  </div>
  <hr class="style2" />
  <div class="follow__other">
    <a class=" mt-2  transition ease-in-out hover:scale-105 text-white bg-purple-700 hover:text-gray-200 hover:bg-purple-600 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm follow__otherbtn mx-2 py-1 text-center" href="/post/addFriend/<%= otherUserData.userId %>">
        <% if (otherUserData.alreadyFollowing) { %>
            Following
        <% } else { %>
            Follow
        <% } %> 
    </a>
    <a class=" mt-2  transition ease-in-out hover:scale-105 text-white bg-purple-700 hover:text-gray-200 hover:bg-purple-600 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm follow__otherbtn mx-2 py-1 text-center" href="/adminuser/report/<%=otherUserData.userId %>">
      Report
  </a>
  </div>
    <div class="myposts">
      <% otherUserPostsData.forEach(post => { %>
        <% const formattedDate = new Date(post.addedOn).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
        <%- include("./../Partials/postListItem.ejs", {
            title: post.title,
            name: otherUserData.username,
            userId: post.userId,
            postId: post.stringId,
            likes: post.likes,
            isAlreadyLikedByThisUser: post.isAlreadyLikedByThisUser,
            currentPage: 'otherUser',
            comments: post.comments ? post.comments.length : 0,
            description: post.description,
            date: formattedDate,
            profileImage: otherUserData.profileImage ? otherUserData.profileImage : 'https://virtualpiano.net/wp-content/uploads/2020/08/Dua-Lipa-Artist-Online-Piano-Keyboard-Virtual-Piano.jpg',
            mainImage: post.uploadedImages
          })
        %>
      <% }) %>
    </div>
</div>
