<div
  class="main text-gray-800 dark:text-gray-100 bg-[#fff] dark:bg-[#000] transition-colors duration-1000"
>
  <div class="banner">
    <img
      src="https://img.freepik.com/free-vector/nature-scene-with-river-hills-forest-mountain-landscape-flat-cartoon-style-illustration_1150-37326.jpg"
      alt=""
    />
  </div>
  <div class="top">
    <div class="Followers right">
      <a href="/profile/followers/<%= userData.stringId %>">
        <h2 class="small-font font-bold"><%=  userData.noFriends %></h2>
        <p class="small-font">Followers</p>
      </a>
    </div>
    <div class="profile flexcenter1">
      <img
        class="border-4 border-white dark:border-black transition-colors duration-1000"
        src="<%= userData.profileImage ? userData.profileImage : 'https://virtualpiano.net/wp-content/uploads/2020/08/Dua-Lipa-Artist-Online-Piano-Keyboard-Virtual-Piano.jpg' %>"
        alt="pfp"
      />
    </div>
    <div class="Following left">
      <a href="/profile/following/<%= userData.stringId %>">
        <h2 class="small-font font-bold"><%= userData.noFollowing %></h2>
        <p class="small-font">Following</p>
      </a>
    </div>
  </div>

  <div class="mid">
    <div class="name font-bold">
      <h3><%= userData.username %></h3>
    </div>
    <div class="bio">
      <p class="small-font">
        <%= userData.description %>
      </p>
    </div>
  </div>
  <hr class="style2" />

  <div>
    <div class="flexcenter">
      <a href="/profile/editProfile">
        <button class="btn1 hover:text-black dark:hover:text-white">
          <i class="fa fa-pencil" aria-hidden="true"></i> &nbsp; Edit Profile
          <span></span><span></span><span></span><span></span>
        </button>
      </a>
      <a>
        <button class="btn1 hover:text-black dark:hover:text-white">
          <i class="fa fa-share" aria-hidden="true"></i> &nbsp; Share Profile
          <span></span><span></span><span></span><span></span>
        </button>
      </a>
      <a>
        <button class="btn1 hover:text-black dark:hover:text-white">
          <i class="fa fa-file-image" aria-hidden="true"></i> &nbsp; My Posts
          <span></span><span></span><span></span><span></span>
        </button>
      </a>
      <a href="/profile/userSettings">
        <button class="btn1 hover:text-black dark:hover:text-white">
          <i class="fa fa-cogs" aria-hidden="true"></i> &nbsp; User Settings
          <span></span><span></span><span></span><span></span>
        </button>
      </a>
    </div>
    <div class="myposts">
      <% userPosts.forEach(post => { %>
        <% const formattedDate = new Date(post.addedOn).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
        <%- include("./../Partials/postListItem.ejs", {
            title: post.title,
            name: userData.username,
            userId: userData.userId,
            postId: post.stringId,
            likes: post.likes,
            comments: post.comments ? post.comments.length: 0,
            isAlreadyLikedByThisUser: post.isAlreadyLikedByThisUser,
            currentPage: 'myProfile',
            description: post.description,
            date: formattedDate,
            profileImage: userData.profileImage ? userData.profileImage : 'https://virtualpiano.net/wp-content/uploads/2020/08/Dua-Lipa-Artist-Online-Piano-Keyboard-Virtual-Piano.jpg',
            mainImage: post.uploadedImages
          })
        %>
      <% }) %>
    </div>
  </div>
</div>
