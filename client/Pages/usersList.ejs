<main class="box-border flex flex-col border-none grow">
    <div class="sm:px-8 p-4 bg-[#f7f7f7] dark:bg-[#121212] transition-colors duration-1000">
        <h1 class="text-[18px] sm:text-[22px] transition-colors duration-1000 text-black dark:text-white"><%= title %></h1>
    </div>
    <hr class="w-100 h-1 bg-purple-300 border-0 rounded transition-colors duration-1000 dark:bg-purple-700 text-black dark:text-white">

    <div class="follow__wrapper grow bg-white transition-colors duration-1000 dark:bg-black sm:px-4 text-black dark:text-gray-200 flex flex-col gap-y-3">
        <% filteredUsersList.forEach(friend => { %>
            <%- include('../Partials/followCard.ejs', {
                name: friend.username,
                userId: friend.stringId,
                alreadyFollowing: friend.alreadyFollowing,
                profileImage: friend.profileImage ? friend.profileImage : 'https://images.unsplash.com/photo-1578979879663-4ba6a968a50a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8YmVhdXRpZnVsJTIwZ2lybHN8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60',
                })
            %>
        <% }) %>
    </div>
</main>