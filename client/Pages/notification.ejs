<main class="box-border flex flex-col border-none grow">
    <div class="sm:px-8 p-4 bg-[#f7f7f7] dark:bg-[#121212] transition-colors duration-1000">
        <h1 class="text-[18px] sm:text-[22px] transition-colors duration-1000 text-black dark:text-white">Notifications</h1>
    </div>
    <hr class="w-100 h-1 bg-purple-300 border-0 rounded transition-colors duration-1000 dark:bg-purple-700 text-black dark:text-white">
    <div class="flex flex-col bg-white dark:bg-black transition-colors duration-1000 grow">
        <div class="flex flex-col gap-y-4 sm:px-8 pt-3 grow">
            <% notifications.forEach((notification) => { %>
                <% const formattedDate = new Date(notification.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                <%- include('../Partials/notificationItem.ejs', {
                    message: notification.message,
                    imageRequired: notification.imageRequiredNotification,
                    image: notification.fromUserProfileImage ? notification.fromUserProfileImage : 'https://virtualpiano.net/wp-content/uploads/2020/08/Dua-Lipa-Artist-Online-Piano-Keyboard-Virtual-Piano.jpg',
                    fromUserId: notification.fromId,
                    likedPostId: notification.likedPostId,
                    fromUserUsername: notification.fromUserUsername,
                    date: formattedDate,
                    likedImage: notification.likedImage
                }) %>
            <% }) %>
        </div>
    </div>
    
</main>